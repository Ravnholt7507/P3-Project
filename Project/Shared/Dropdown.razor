@inherits DropdownCode
@using CSharpFiles

<div class="w3-padding-64 w3-large w3-text-grey" style="font-weight:bold">

    @for(int i = 0; i < categories.Count; i++)
    {
        ExpandSubNav[i] = false;
        int copy = i;
        <button class="w3-bar-item w3-button" @onclick="() =>ExpandSubNav[copy] = !ExpandSubNav[copy]"><i class="fa fa-bars"></i>@categories[copy]</button>

        if (ExpandSubNav[copy])
        {
            CallSubcats(categories[copy]);
            Dropdownbtn();
            <div class="dropdown-content">
                <div class="Kasse">
                    @foreach (string selSubCats in types)
                    {
                        <a href="Products/@selSubCats" class="w3-bar-item w3-button">@selSubCats</a>
                    }
                </div>
            </div>
        }

    }

    


</div>

<style>
    .dropdown-content {
        display: none;
        display: @Visible;
    }
    .dropdown-content a{
        margin-left: 10px;
    }
</style>
