    int index = 0;
}

<style>
    .page {
        height: 500px;
    }

    .item-list, .specific-item, .stats {
        float: left;
        height: fit-content;
        width: fit-content;
        border: 1px solid black;
        border-radius: 3px;
    }

    .specific-item, .stats{
        margin-left: 50px;
    }

    td, th {
        border: 1px solid black;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #e6e6e6;
    }

    .specific-item {
        display: none;
        display: @Visible;
    }

</style>