            </div>
        </div>
        <div class="outer_specific-item">
            <h3>Specifikke Artikler</h3>
            <div class="specific-item">
                <table>

                    <tr>
                        <th>Product Name</th>
                        <th>Type</th>
                        <th>Color</th>
                        <th>Size</th>
                        <th>Prize</th>
                        <th>Stock</th>

                        <th>Stats</th>
                    </tr>
                    @foreach (var type in typeArray)
                    {
                        if (fillTable == type)
                        {
                            foreach (var prod in ProductArray[Counter])
                            {
                                <tr>
                                    <td>@prod[6]</td> @*Product Name*@
                                    <td>@prod[7]</td> @*Type*@
                                    <td>@prod[4]</td> @*Color*@
                                    <th>@prod[2]</th> @*Size*@
                                    <th>@prod[8],-</th> @*Price*@
                                    <th>@prod[3]</th> @*Stock*@

                                    <td style="text-align:center"><button class="butt_kpi" @onclick="() => { Counter = 0; ShowKPI(prod); StatsPopup(); }"><i class="fa fa-info"></i></button></td>
                                </tr>
                            }
                        }
                        Counter++;
                    }
                </table>
            </div>
            <h3>Timer</h3>
            <button @onclick="()=> { ShowMonths(ListSize); }" class="butt">Show KPI</button>

            <select @bind="ListSize">
                @for (int i = 0; i < Months.Count; i++)
                {
                    <option value=@i>Month @i</option>
                }
            </select>
            <a>Showing month @ListSize</a>
            <br />
            <div class="outer_stats">
                <h3>Statestik</h3>
                <div class="stats">
                    <table>
                        @for (int i = 0; i < Percent.Count; i++)
                        {
                            <tr>
                                <th>@Kpis[i] </th>
                                <th>@Percent[i]</th>
                            </tr>
                        }
                    </table>
                </div>
                <div class="stats">
                    <table>
                        <tr>
                            <td>Month</td>
                            @foreach (var item in SubMonths)
                            {
                                <th>@item</th>
                            }
                        </tr>
                        <tr>
                            <td>Antal produktvisninger</td>
                            @foreach (var item in SubVisits)
                            {
                                <th>@item</th>
                            }
                        </tr>
                        <tr>
                            <td>Totale salg</td>
                            @foreach (var item in SubPurchases)
                            {
                                <th>@item</th>
                            }
                        </tr>
                        <tr>
                            <td>Visninger per salg, for produkt</td>
                            @foreach (var item in SubPurchVisit)
                            {
                                <th>@item</th>
                            }
                        </tr>
                    </table>
                </div>

                <a>Last checked: @DateNow</a>
                <br />
                <a>KPIS update date: @UpdateDate</a>

            </div>
        </div>
    </div>
@*}
else
{
    <p>Fejlkode 4206942069</p>
}*@

@code
{
    public string AccessToken = null;

    bool isLoaded;

    public async Task Read()
    {
        var AccessTokenSession = await SessionStorage.GetAsync<string>("UserName");
        AccessToken = AccessTokenSession.Value;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await Read();
        if (DataBaseVerify(AccessToken))
        {
            isLoaded = true;
        }
        StateHasChanged();
    }
}


